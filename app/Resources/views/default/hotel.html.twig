<script>
var searchbox_options_hotel = {
	refid:6665,
	environment: "prod",
	hotel:{
		elements:{
			form:"hotel",
			autosuggest:".rs_autosuggest",
			rooms:".rs_rooms",
			search:".rs_search_hotel",
			chk_in:".rs_chk_in_hotel, .rs_chk_in_calendar, .rs_date_chk_in",
			chk_out:".rs_chk_out_hotel, .rs_chk_out_calendar, .rs_date_chk_out",
			chk_in_display:".rs_date_chk_in",
			chk_out_display:".rs_date_chk_out"	
		},
		calendar:{
			output_format:"<div class='rs_mobi_chk_day'>[d]</div><div class='rs_mobi_chk_month'>[F]</div>"
		},
		select_name:true
	},
	car:{
		enabled:false		
	},
	air: {
		enabled:false
	},
	vp:{
		enabled:false,
		active:false
	}
};
$(document).ready(function() {
	$('#rs_hotel').searchbox(searchbox_options_hotel);
	
	if( /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent) ) {
		$("<link/>", {
		   rel: "stylesheet",
		   type: "text/css",
		   href: "css/mobile_search.css"
		}).appendTo("head");	
	}
});


 
</script>
<div id="rs_hotel" class='rs_searchbox'>
     <form name="hotel" class="rs_hotel_form">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group form-group-lg form-group-icon-left"><i class="fa fa-map-marker input-icon"></i>
                    <label>Where are you going?</label>
                    <input 
                        name="query"
                        class="rs_autosuggest form-control"
                        type="text"
                        title="Enter a City or Airport"
                        autocomplete="off"                        
                        onclick='this.value="";'
                        data-rs_ga_track='["change",["Searchbox - home page", "Autosuggest"]]'
                        placeholder="City, Airport, Point of Interest or Zip Code" />
                </div>
            </div>
            <div class="col-md-8">
                <div class="input-daterange" data-date-format="mm/dd/yyyy">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group form-group-lg form-group-icon-left"><i class="fa fa-calendar input-icon input-icon-highlight"></i>
                                <label>Check-in</label>                                
                                <input name="check_in" class="rs_chk_in_hotel form-control" title='Enter your check in date.' data-rs_ga_track='["change",["Searchbox - home page", "Check In"]]' type='text' autocomplete="off"  value="mm/dd/yyyy">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group form-group-lg form-group-icon-left"><i class="fa fa-calendar input-icon input-icon-highlight"></i>
                                <label>Check-out</label>                                
                                <input name="check_out" class="rs_chk_out_hotel form-control" type='text' title='Enter your check out date.' data-rs_ga_track='["change",["Searchbox - home page", "Check Out"]]' autocomplete="off"  value="mm/dd/yyyy">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group form-group-lg form-group-select-plus">
                                <label>Rooms</label>
                               <select class="rs_rooms form-control" name="rooms" title='Number of Rooms' data-rs_ga_track='["change",["Searchbox - home page", "Rooms"]]'></select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group form-group-lg form-group-select-plus">
                                <label>Guests</label>
                                <select name="adults" class="rs_select_box js_guest_select form-control"></select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>        
        <button type="submit" class="rs_search_hotel btn btn-primary btn-lg" data-rs_ga_track='["click",["Searchbox - home page", "Submit"]]' title='Search'>Search for Hotels<div class="rs_search_icon"></div></button>
    </form>
</div>
